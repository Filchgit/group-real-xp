<div class ="outer_container">

  <div class="exp_title">
    <h1 > <%= @experience.title %>  </h1>
  </div>

<div class="show_container">
  
  <div class="descriptions">
    <br>
    <p> <%= @experience.description %>  </p>
    <p> <%= @experience.description_second %> </p>
    <br>
    <p> Experience price per day session: $<%= @experience.unit_current_price %> </p>

    <div class ="do_stuff">
      <h1 class="icon"><%= link_to "make a booking now!",  new_experience_booking_path(@experience), class: "btn btn-primary"%></h1>

      <h1 class="icon"><%= link_to "edit this booking",  edit_experience_path(@experience), class: "btn btn-primary"%></h1>
      <br>
      <h1 class="icon"><%= link_to icon('fa', 'trash-alt'), experience_path(@experience), class: "btn btn-danger", method: :delete, data: { confirm: "Are you sure?" } %></h1>
     </div>
  </div>

  <div class="map_portion">
  <h4> AT: <div id = "experience_location"> <%= @experience.location %> </div></hh4>
    <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>



    
  </div>

</div>  
<div class="center_container">
  <div class="photo_container"> 
    <% @experience.photos.each do |photo| %>
    <div class="photo"> <%= cl_image_tag photo.key, height: 400, width: 450, crop: :fill %> </div>
    <% end %>
  </div>
</div>

