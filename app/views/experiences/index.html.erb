
<h1 class="page-title">Xplore our Experiences</h1>

<div class="content">
  <div class="my-cards">

    
        <% @experiences.each do |experience| %>
        
          <%= link_to experience do %>
          <div class="card">
         
            <div class="card-body">
           
              <% if experience.photos.first.nil? == true  %>
                <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image cap">
              <% else %>
                <% first_photo = experience.photos.first  %>
                <img class="card-img-top" <%= cl_image_tag first_photo.key,  crop: :fill %>  >
              <% end %>
              <h5 class="card-title"><%= experience.title %></h5>
              <p class="card-text max-lines"><%= experience.description %></p>
             
           
            
            </div>
          <% end %>
  
          </div>
        <% end %>
  </div>
 <div class="mapbox-container" >
 <h2> Search for an experience near you</h2>
  <div id="map"
    
      style="width: 100%; height: 600px; margin: 15px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <h1><%= link_to "Xpert Guides: Add your Xperience now!",  new_experience_path(@experience), class: "btn btn-primary"%></h1>
  </div> 
</div>




