<div class="row">
  <div class="col-3">
    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
      <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Booked Xperiences</a>
      <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Posted Xperiencs</a>
      <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Bookings Pending</a>
    </div>
  </div>




  <div class="col-9">
    <div class="tab-content" id="v-pills-tabContent">
      <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
        <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
          <div class="card-columns">
            <% @bookings.each do |booking| %>
              <div class="card">
                <div class="card-body">

                   <h5 class="card-title"><%= booking.experience.title %></h5>
                    <p class="card-text max-lines"><%= booking.experience.description %></p>

                  <% end %>

                </div>
              </div>

          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
        <div class="card-columns">
          <% @experiences.each do |experience| %>
            <div class="card">
              <div class="card-body">

                  <% if experience.photos.first.nil? == true  %>
                    <img class="card-img-top" src="https://source.unsplash.com/random" alt="Card image cap">
                  <% else %>
                    <% first_photo = experience.photos.first  %>
                    <img class="card-img-top" <%= cl_image_tag first_photo.key,  crop: :fill %>  >
                  <% end %>
                  <h5 class="card-title"><%= experience.title %></h5>
                  <p class="card-text max-lines"><%= experience.description %></p>
                  <%= link_to experience do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-eye" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <circle cx="12" cy="12" r="2" />
                    <path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7" />
                  </svg>
                <% end %>

              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">...</div>
    </div>
  </div>
</div>
